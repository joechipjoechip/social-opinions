{
  "manifest_version": 3,
  "name": "Reddit Résumés",
  "version": "1.0",
  "description": "Résume automatiquement les pages Reddit avec ChatGPT",
  "oauth2": {
    "client_id": "274847669888-3g71rhjdrk3ivni2opnkg6so7m5b0md5.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.reddit.com/*",
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
